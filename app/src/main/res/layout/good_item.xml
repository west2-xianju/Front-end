<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="430dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    android:background="@color/grey1">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/goods">
        <ImageView
            android:id="@+id/goodImage"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/goodTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/goodGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:textColor="@color/grey1"/>
        <TextView
            android:id="@+id/goodPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:textColor="@color/dkorange"/>
        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/sell_touxiang"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/momo"
                android:layout_marginLeft="40dp"/>
            <TextView
                android:id="@+id/sell_id"
                android:layout_width="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:textSize="25sp"/>

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>